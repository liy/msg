<!DOCTYPE html>
<html>
<head>
  <title>Msg</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<% flash.each do |key, value| %>
		<% if !value.nil? %>
			<div class="alert alert-<%= key %>">
				<a class="close" href="#" data-dismiss="alert">Ã—</a>
				<!-- be careful with the row method! -->
				<%= raw(value) %>
			</div>
		<% end %>
	<% end %>
	
	<%= yield %>
</div>
</body>
</html>
